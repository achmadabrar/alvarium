<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/primaryTextColor</item>
    </style>


    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen_with_logo</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Toolbar_Popup" parent="AppTheme">
        <item name="android:textColorPrimary">?attr/toolbarTextColor</item>  <!-- Text -->
        <item name="android:textColorSecondary">?attr/toolbarTextColor</item> <!-- Left icon -->
    </style>

    <style name="RoundedSpinner">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:backgroundTint">?attr/editTextStyle1BG</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/et_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RoundedEditText">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:backgroundTint">?attr/editTextStyle1BG</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/editTextStyle1Hint</item>
        <item name="android:textSize">@dimen/et_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="OrderDetailsTitleTextViewStyle" parent="rtlSupportedTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/confirm_order_card_title_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textSize">@dimen/tv_text_size_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundedButtonRegular">
        <item name="android:background">@drawable/rounded_background_ripple</item>
        <item name="android:backgroundTint">@color/btnStyle1_background</item>
        <item name="android:textColor">@color/btnStyle1_text</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="RectangularButtonRegular">
        <item name="android:background">@drawable/rect_background_ripple</item>
        <item name="android:backgroundTint">@color/btnStyle1_background</item>
        <item name="android:textColor">@color/btnStyle1_text</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="RoundedButtonTiny_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/tiny_btn_background</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">@dimen/tv_text_size_tiny</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="formHeaderNewDesignTextViewStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="productPageDynamicText" parent="rtlSupportedTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/tv_text_size_regular</item>
    </style>

    <style name="orderTotalKeyTextViewStyle" parent="rtlSupportedTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="orderTotalValueTextViewStyle" parent="rtlSupportedTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/placeholder_price</item>
    </style>

    <style name="horizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">?attr/horizontalDividerBg</item>
    </style>

    <style name="BsDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="rtlSupportedTextView">
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="titleTextViewStyle" parent="rtlSupportedTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textSize">@dimen/tv_text_size_semi_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/placeholder</item>
    </style>

</resources>
