<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_background</item>
        <item name="colorPrimaryDark">@color/theme_background</item>
        <item name="colorAccent">@color/frame_background</item>
    </style>


    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen_with_background</item>
        <!--<item name="android:windowBackground">@drawable/launcher_screen_with_logo</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Toolbar_Popup" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="RoundedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:backgroundTint">@color/register_et_background</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/login_tv_text</item>
        <item name="android:textSize">@dimen/et_text_size</item>
    </style>

</resources>
