    <style name="RoundedButtonPink">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:textColor">@color/login_tv_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="formHeaderNewDesignTextViewStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

