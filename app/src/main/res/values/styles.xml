<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_background</item>
        <item name="colorPrimaryDark">@color/theme_background</item>
        <item name="colorAccent">@color/gray</item>

        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/whiteOrBlack</item>
        <item name="android:textColorHint">@color/whiteOrBlack</item>
    </style>


    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen_with_logo</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Toolbar_Popup" parent="AppTheme">
        <item name="android:textColorPrimary">@color/whiteOrBlack</item>  <!-- Text -->
        <item name="android:textColorSecondary">@color/whiteOrBlack</item> <!-- Left icon -->
    </style>

    <style name="RoundedSpinner">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:backgroundTint">@color/edittext_background</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/et_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RoundedEditText">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:backgroundTint">@color/edittext_background</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/whiteOrBlack</item>
        <item name="android:textColorHint">@color/login_tv_text</item>
        <item name="android:textSize">@dimen/et_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="OrderDetailsTitleTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/confirm_order_card_title_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/whiteOrBlack</item>
        <item name="android:textSize">@dimen/tv_text_size_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundedButtonPink">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:textColor">@color/login_tv_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="RoundedButtonTiny_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:backgroundTint">@color/whiteOrGray</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/tv_text_size_tiny</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="formHeaderNewDesignTextViewStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="orderTotalKeyTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.7</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/whiteOrBlack</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="orderTotalValueTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.3</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/placeholder_price</item>
    </style>

</resources>
