<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/billingAddressRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background">

    <ScrollView
        android:id="@+id/rootScrollViewBillingAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/fragment_background"
        android:orientation="vertical"
        android:screenOrientation="nosensor"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/form_margin"
            android:layout_marginEnd="@dimen/form_margin"
            android:layout_marginTop="15dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                style="@style/RoundedSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/countrySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/simple_spinner_item"
                    android:entries="@array/spinner_dummy_data"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/RoundedSpinner"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/stateSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/simple_spinner_item"
                    android:entries="@array/spinner_dummy_data"
                    android:textColor="@color/white" />
            </LinearLayout>

            <include
                layout="@layout/address_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnContinue"
                style="@style/RoundedButtonPink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/text_continue" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>