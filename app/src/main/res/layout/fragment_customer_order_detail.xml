<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customerOrderRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/co_fragment_bg">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/orderDetailsCard"
                layout="@layout/confirm_order_card"/>

            <include
                android:id="@+id/billingAddressCard"
                layout="@layout/confirm_order_card"/>

            <include
                android:id="@+id/shippingAddressCard"
                layout="@layout/confirm_order_card"/>

            <include
                android:id="@+id/shippingMethodCard"
                layout="@layout/confirm_order_card"/>

            <include
                android:id="@+id/paymentMethodCard"
                layout="@layout/confirm_order_card"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2dp"
                cardView:cardCornerRadius="@dimen/cardCornerRadius"
                cardView:cardBackgroundColor="@android:color/transparent"
                cardView:cardPreventCornerOverlap="false"
                cardView:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/confirm_order_card_title_bg"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="@string/products"
                        android:textColor="@color/whiteOrGray" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/checkoutProductList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:paddingTop="5dp"
                        tools:itemCount="2"
                        tools:listitem="@layout/cart_list_item" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardView:cardCornerRadius="@dimen/cardCornerRadius"
                cardView:cardPreventCornerOverlap="false"
                cardView:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/confirm_order_card_title_bg"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="@string/invoice"
                        android:textColor="@color/whiteOrGray" />

                    <include
                        layout="@layout/table_order_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>