<?xml version="1.0" encoding="utf-8"?>

<com.bs.ecommerce.customViews.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkableLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
    android:background="@drawable/rounded_background_slight"
    android:backgroundTint="?attr/primaryListItemBg"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/rb_shippingChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:padding="5dp"
        android:layout_marginStart="5dp"
        android:checked="true"
        android:gravity="center_vertical"
        android:button="@drawable/custom_radio_button"
        android:textStyle="bold"
        tools:text="@string/placeholder"
        android:textColor="?attr/primaryTextColor" />

    <TextView
        android:id="@+id/tv_shippingMethodAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:textStyle="bold"
        android:textColor="?attr/primaryTextColor"
        tools:text="@string/placeholder" />


    <TextView
        android:id="@+id/tv_shippingMethodDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:textColor="?attr/primaryTextColor"
        tools:text="@string/placeholder" />

</com.bs.ecommerce.customViews.CheckableLinearLayout>