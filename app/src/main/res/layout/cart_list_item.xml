<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/list_item_bg"
    app:cardCornerRadius="10dp">

    <ImageView
        android:id="@+id/icRemoveItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/placeholder"
        android:padding="2dp"
        android:src="@drawable/ic_cross" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:paddingTop="8dp"
        android:paddingEnd="5dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/ivProductThumb"
            android:layout_width="@dimen/product_thumbnail_cart"
            android:layout_height="@dimen/product_thumbnail_cart"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/placeholder"
            tools:src="@tools:sample/avatars" />


        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivProductThumb"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/whiteOrBlack"
            android:textSize="@dimen/tv_text_size_regular"
            android:textStyle="bold"
            tools:text="@string/placeholder" />

        <include
            android:id="@+id/productPriceLayout"
            layout="@layout/product_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductName"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/ivProductThumb" />

        <WebView
            android:id="@+id/tvAttribute1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productPriceLayout"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/ivProductThumb"
            android:textSize="15sp"
            tools:text="@string/placeholder" />

        <TextView
            android:id="@+id/quantityForCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAttribute1"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/ivProductThumb"
            android:textColor="@color/whiteOrBlack"
            android:textSize="@dimen/tv_text_size_regular"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="@string/placeholder" />

        <LinearLayout
            android:id="@+id/btn_holder"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/quantityForCheckout"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/ivProductThumb"
            android:orientation="horizontal">

            <include layout="@layout/qunatity_button" />

            <TextView
                android:id="@+id/tvItemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/whiteOrBlack"
                android:visibility="visible"
                tools:text="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAttribute2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_holder"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/ivProductThumb"
            android:textColor="@color/whiteOrBlack"
            android:textSize="@dimen/tv_text_size_regular"
            android:visibility="gone"
            tools:text="@string/placeholder" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>