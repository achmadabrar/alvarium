<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_cart_coupon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <EditText
        android:id="@+id/etCartCoupon"
        style="@style/RoundedEditTextLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_weight=".60"
        android:autofillHints="Username"
        android:hint="@string/cart_entre_your_coupon_here"
        android:imeOptions="actionDone"
        android:textSize="16sp"
        android:inputType="text" />

    <Button
        android:id="@+id/btnApplyCoupon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_weight=".40"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/pink"
        android:text="@string/cart_apply_coupon"
        android:textAllCaps="false"
        android:textColor="@color/login_et_background"
        android:textSize="16sp" />

</LinearLayout>