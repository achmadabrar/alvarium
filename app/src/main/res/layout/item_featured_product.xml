<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@color/fragment_background">

    <ImageView
        android:id="@+id/ivProductThumb"
        android:layout_width="@dimen/product_thumbnail_size"
        android:layout_height="@dimen/product_thumbnail_size"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivProductThumb"
        android:layout_marginStart="3dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/whiteOrBlack"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="@string/placeholder" />

    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProductName"
        android:layout_marginStart="3dp"
        android:maxLines="1"
        android:textColor="@color/red"
        android:textSize="11sp"
        tools:text="@string/placeholder_price" />

    <!--  inactive star color:  android:progressBackgroundTint="@color/gray" -->
    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProductPrice"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp"
        android:numStars="5"
        android:progressTint="@color/golden"
        android:rating="3"
        android:stepSize="1" />

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProductPrice"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@id/ratingBar"
        android:maxLines="1"
        android:paddingTop="2dp"
        android:textColor="@color/grayOrDark"
        android:textSize="10sp"
        tools:text="(12)" />

    <ImageView
        android:id="@+id/ivAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProductPrice"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:paddingTop="2dp"
        android:src="@drawable/ic_cart"
        android:tint="@color/grayOrDark" />

    <ImageView
        android:id="@+id/ivAddToFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProductPrice"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/ivAddToCart"
        android:paddingTop="3dp"
        android:src="@drawable/ic_heart"
        android:tint="@color/grayOrDark" />

</RelativeLayout>