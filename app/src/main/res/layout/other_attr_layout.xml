<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/fragment_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLayoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            tools:text="@string/placeholder"
            android:textColor="@color/whiteOrBlack"
            android:textSize="@dimen/tv_text_size_regular"
            android:textStyle="bold" />

        <TextView
            android:id="@id/tvLayoutSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="1"
            tools:text="@string/placeholder"
            android:textColor="@color/gray"
            android:textSize="@dimen/tv_text_size_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSelectedAttr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSelectedAttr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/green"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:drawablePadding="10dp"
            android:textSize="@dimen/tv_text_size_regular"
            tools:text="NOKIA" />
    </LinearLayout>

</LinearLayout>