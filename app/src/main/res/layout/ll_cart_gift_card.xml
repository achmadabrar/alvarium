<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:id="@+id/ll_cart_gift_card"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:visibility="visible"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etGiftCode"
            style="@style/RoundedEditText"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_marginEnd="3dp"
            android:layout_weight=".60"
            android:autofillHints="Username"
            android:layout_marginTop="0dp"
            android:hint="@string/cart_enter_gift_card_code"
            android:imeOptions="actionDone"
            android:textSize="@dimen/tv_text_size_regular"
            android:inputType="text" />

        <Button
            android:id="@+id/btnAddGiftCode"
            style="@style/RoundedButtonRegular"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_marginStart="3dp"
            android:layout_weight=".40"
            android:textSize="@dimen/tv_text_size_regular"
            android:text="@string/cart_add_gift_card"
            android:textAllCaps="false" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/appliedGiftCardLayout"
        tools:visibility="visible"
        android:visibility="gone">

        <TextView
            android:id="@+id/appliedGiftCardCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="?attr/primaryTextColor"
            android:textSize="13sp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/removeGiftCardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingEnd="10dp"
            android:textColor="?attr/primaryIconTint"
            android:textSize="12sp"
            android:textStyle="bold"
            android:src="@drawable/ic_remove" />
    </LinearLayout>
</LinearLayout>


