<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/categoryNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:gravity="center|start"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:background="@color/toolbar_color"
            android:textColor="@color/whiteOrBlack"
            android:textSize="@dimen/tv_text_size_large"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/productListRootLayout"
        android:background="@color/fragment_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llButtonHolder"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/btnBrand"
                android:background="@drawable/rect_background_ripple"
                android:backgroundTint="@color/product_list_btn_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_by"
                    android:textSize="@dimen/button_text_size"
                    android:textColor="@color/whiteOrBlack"
                    android:layout_marginEnd="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    android:tint="@color/whiteOrBlack"
                    android:contentDescription="@string/placeholder"/>
            </LinearLayout>

            <View
                android:id="@+id/btn_vertical_divider"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#444444"/>

            <LinearLayout
                android:id="@+id/btnFilter"
                android:background="@drawable/rect_background_ripple"
                android:backgroundTint="@color/product_list_btn_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter"
                    android:textSize="@dimen/button_text_size"
                    android:textColor="@color/whiteOrBlack"
                    android:layout_marginEnd="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_filter"
                    android:tint="@color/whiteOrBlack"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawerLayout"
            android:layout_below="@id/llButtonHolder"
            android:layout_width="match_parent"
            android:background="@color/fragment_background"
            android:visibility="visible"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductList"
                android:layout_below="@id/llButtonHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:spanCount="2"
                tools:itemCount="5"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_product_for_gridlayout" />

            <TextView
                android:id="@+id/tvNoProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/whiteOrBlack"
                android:textSize="@dimen/tv_text_size_regular"
                tools:visibility="visible"
                android:visibility="gone"
                android:text="@string/no_product_found"/>

            <FrameLayout
                android:id="@+id/filterFragmentHolder"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="end" />

        </androidx.drawerlayout.widget.DrawerLayout>
    </RelativeLayout>

    <include
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/sort_option_bottom_sheet"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>