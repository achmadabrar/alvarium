<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background_slight"
    android:backgroundTint="@color/list_item_bg"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_paymentMethodImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/placeholder"
        android:tint="@color/whiteOrBlack"
        android:src="@drawable/ic_payment" />

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/rb_paymentChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:button="@drawable/custom_radio_button"
        android:checked="true"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/whiteOrBlack"
        android:textStyle="bold"
        tools:text="@string/placeholder" />

</LinearLayout>