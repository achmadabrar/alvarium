<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        tools:text="@string/placeholder"
        android:textColor="@color/whiteOrBlack"
        android:textSize="@dimen/tv_text_size_large"
        android:textStyle="bold" />

    <TextView
        style="@style/RoundedButtonPink"
        android:id="@+id/btnSeeAll"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:backgroundTint="@color/whiteOrGray"
        android:gravity="center_vertical"
        android:text="@string/see_all"
        android:textColor="@color/red"
        android:textSize="@dimen/tv_text_size_tiny"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_below="@id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_featured_product"
        tools:orientation="horizontal"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/rvList"
        android:background="@color/darkOrGray" />

</RelativeLayout>