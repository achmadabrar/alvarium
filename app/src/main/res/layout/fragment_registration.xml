<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <ProgressBar
        android:id="@+id/progressBarRegister"
        style="?android:attr/progressBarStyle"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/fragment_background"
        android:orientation="vertical"
        android:screenOrientation="nosensor"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_margin"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/form_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_title_your_personal_details"
                    android:textColor="@color/register_title_text"
                    android:textSize="@dimen/registration_title_text_size"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/register_horizontal_line" />

                <EditText
                    android:id="@+id/tvRegFirstName"
                    style="@style/RoundedEditTextDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:drawableEnd="@drawable/ic_user"
                    android:hint="@string/reg_hint_first_name"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/tvRegLastName"
                    style="@style/RoundedEditTextDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableEnd="@drawable/ic_user"
                    android:hint="@string/reg_hint_last_name"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"/>

                <EditText
                    android:id="@+id/tvRegDob"
                    style="@style/RoundedEditTextDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:hint="@string/reg_hint_dd_mm_yy"
                    android:imeOptions="actionNext"
                    android:inputType="date"/>

                <EditText
                    android:id="@+id/tvRegEmail"
                    style="@style/RoundedEditTextDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableEnd="@drawable/ic_email"
                    android:hint="@string/reg_hint_email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"/>

                <EditText
                    android:id="@+id/tvRegPhone"
                    style="@style/RoundedEditTextDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableEnd="@drawable/ic_mobile"
                    android:hint="@string/reg_hint_phone"
                    android:imeOptions="actionNext"
                    android:inputType="phone" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:text="@string/reg_gender"
                        android:textColor="@color/register_title_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:button="@drawable/custom_radio_button"
                        android:checked="true"
                        android:text="@string/male"
                        android:textColor="@color/radiobutton_text"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/custom_radio_button"
                        android:text="@string/female"
                        android:textColor="@color/radiobutton_text"
                        android:textSize="18sp" />
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/reg_title_company_details"
                    android:textColor="@color/register_title_text"
                    android:textSize="@dimen/registration_title_text_size"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/register_horizontal_line" />

                <EditText
                    android:id="@+id/tvRegCompanyName"
                    style="@style/RoundedEditTextDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/reg_hint_company_name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/reg_title_options"
                    android:textColor="@color/register_title_text"
                    android:textSize="@dimen/registration_title_text_size"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/register_horizontal_line" />

                <CheckBox
                    android:id="@+id/cbNewsletter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:button="@drawable/custom_radio_button"
                    android:checked="true"
                    android:text="@string/newsletter"
                    android:textColor="@color/radiobutton_text"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/reg_title_your_password"
                    android:textColor="@color/register_title_text"
                    android:textSize="@dimen/registration_title_text_size"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/register_horizontal_line" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/register_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_password"
                        style="@style/RoundedEditTextDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/reg_hint_password"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/reg_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvConfirmPassword"
                        style="@style/RoundedEditTextDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/reg_hint_confirm_password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/pink"
                android:nextFocusLeft="@+id/login_remember_password"
                android:nextFocusUp="@+id/login_remember_password"
                android:text="@string/reg_btn_register"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
