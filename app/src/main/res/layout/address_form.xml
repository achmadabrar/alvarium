<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/fragmentBackGroundColor"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etFirstName"
        style="@style/RoundedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:drawableEnd="@drawable/ic_star_formular"
        android:hint="@string/reg_hint_first_name"
        android:imeOptions="actionNext"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etLastName"
        style="@style/RoundedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:drawableEnd="@drawable/ic_star_formular"
        android:hint="@string/reg_hint_last_name"
        android:imeOptions="actionNext"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etEmail"
        style="@style/RoundedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:drawableEnd="@drawable/ic_star_formular"
        android:hint="@string/reg_hint_email"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress" />

    <LinearLayout
        style="@style/RoundedSpinner"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/countrySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/simple_spinner_item"
            android:entries="@array/spinner_dummy_data"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stateSpinnerLayout"
        style="@style/RoundedSpinner"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/stateSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/simple_spinner_item"
            android:entries="@array/spinner_dummy_data"
            android:textColor="@color/white" />
    </LinearLayout>

    <EditText
        android:id="@+id/etCompanyName"
        style="@style/RoundedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:hint="@string/reg_hint_company_name"
        android:imeOptions="actionNext"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/etStateProvince"
        style="@style/RoundedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:hint="@string/reg_hint_state"
        android:imeOptions="actionNext"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/etCity"
        style="@style/RoundedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:hint="@string/city"
        android:imeOptions="actionNext"
        android:inputType="textCapWords" />


    <EditText
        android:id="@+id/etStreetAddress"
        style="@style/RoundedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:drawableEnd="@drawable/ic_star_formular"
        android:hint="@string/reg_hint_street_address"
        android:imeOptions="actionNext"
        android:inputType="text" />

    <EditText
        android:id="@+id/etStreetAddress2"
        style="@style/RoundedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:hint="@string/reg_hint_street_address2"
        android:imeOptions="actionNext"
        android:inputType="text" />

    <EditText
        android:id="@+id/etZipCode"
        style="@style/RoundedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:drawableEnd="@drawable/ic_star_formular"
        android:hint="@string/zip_code"
        android:imeOptions="actionNext"
        android:inputType="number" />

    <EditText
        android:id="@+id/etPhone"
        style="@style/RoundedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:drawableEnd="@drawable/ic_star_formular"
        android:hint="@string/reg_hint_phone"
        android:imeOptions="actionNext"
        android:inputType="phone" />

    <EditText
        android:id="@+id/etFax"
        style="@style/RoundedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:hint="@string/fax"
        android:imeOptions="actionDone"
        android:inputType="phone" />

</LinearLayout>