<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/custom_radio_button"
        android:checked="true"
        android:padding="5dp"
        android:maxLines="2"
        android:layout_toStartOf="@id/btnRemoveFilter"
        android:textColor="@color/whiteOrBlack"
        android:textSize="@dimen/tv_text_size_regular"
        android:visibility="visible"
        tools:text="@string/placeholder" />

    <TextView
        android:id="@+id/btnRemoveFilter"
        style="@style/RoundedButtonPink"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/whiteOrGray"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="Remove"
        android:textColor="@color/red"
        android:textSize="@dimen/tv_text_size_tiny"
        android:textStyle="bold" />

</RelativeLayout>